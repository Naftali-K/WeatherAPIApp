<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <ImageView
        android:id="@+id/weather_image_view"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="#EAEAEA"/>

    <TextView
        android:id="@+id/weather_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/weather_image_view"
        android:layout_margin="10dp"
        android:hint="Type weather"/>

    <TextView
        android:id="@+id/date_weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:hint="Date"/>

    <TextView
        android:id="@+id/max_min_temp_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/weather_text_view"
        app:layout_constraintStart_toEndOf="@id/weather_image_view"
        android:layout_margin="10dp"
        android:text="Max-Min Temp:"/>

    <TextView
        android:id="@+id/max_min_temp_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/max_min_temp_title_text_view"
        app:layout_constraintBottom_toBottomOf="@id/max_min_temp_title_text_view"
        app:layout_constraintStart_toEndOf="@id/max_min_temp_title_text_view"
        android:hint="7-12"/>

    <TextView
        android:id="@+id/temp_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/max_min_temp_title_text_view"
        app:layout_constraintBottom_toBottomOf="@+id/max_min_temp_title_text_view"
        app:layout_constraintStart_toEndOf="@+id/max_min_temp_text_view"
        android:layout_marginStart="20dp"
        android:text="Temp:"/>

    <TextView
        android:id="@+id/temp_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/max_min_temp_title_text_view"
        app:layout_constraintBottom_toBottomOf="@+id/max_min_temp_title_text_view"
        app:layout_constraintStart_toEndOf="@+id/temp_title_text_view"
        android:hint="11.0"/>

    <TextView
        android:id="@+id/wind_speen_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/max_min_temp_title_text_view"
        app:layout_constraintStart_toEndOf="@id/weather_image_view"
        android:layout_margin="10dp"
        android:text="Wind Speen:"/>

    <TextView
        android:id="@+id/wind_speed_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/wind_speen_title_text_view"
        app:layout_constraintBottom_toBottomOf="@id/wind_speen_title_text_view"
        app:layout_constraintStart_toEndOf="@id/wind_speen_title_text_view"
        android:hint="2.0"/>

    <TextView
        android:id="@+id/air_pressure_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/wind_speen_title_text_view"
        app:layout_constraintStart_toEndOf="@id/weather_image_view"
        android:layout_margin="10dp"
        android:text="Air Pressure:"/>

    <TextView
        android:id="@+id/air_pressure_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/air_pressure_title_text_view"
        app:layout_constraintBottom_toBottomOf="@id/air_pressure_title_text_view"
        app:layout_constraintStart_toEndOf="@id/air_pressure_title_text_view"
        android:hint="1027.0"/>

    <TextView
        android:id="@+id/humidity_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/air_pressure_title_text_view"
        app:layout_constraintStart_toEndOf="@id/weather_image_view"
        android:layout_margin="10dp"
        android:text="Humidity:"/>

    <TextView
        android:id="@+id/humidity_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/humidity_title_text_view"
        app:layout_constraintBottom_toBottomOf="@id/humidity_title_text_view"
        app:layout_constraintStart_toEndOf="@id/humidity_title_text_view"
        android:hint="76"/>

    <TextView
        android:id="@+id/visibility_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/humidity_title_text_view"
        app:layout_constraintStart_toEndOf="@id/weather_image_view"
        android:layout_margin="10dp"
        android:text="Visibility:"/>

    <TextView
        android:id="@+id/visibility_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/visibility_title_text_view"
        app:layout_constraintBottom_toBottomOf="@id/visibility_title_text_view"
        app:layout_constraintStart_toEndOf="@id/visibility_title_text_view"
        android:hint="7.0"/>

</androidx.constraintlayout.widget.ConstraintLayout>